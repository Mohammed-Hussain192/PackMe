  <script>
    // Theme toggle functionality
    const themeToggle = document.getElementById('themeToggle');
    const body = document.body;
    let darkMode = true;

    // Check for saved theme preference
    if (localStorage.getItem('theme') === 'light') {
      setLightMode();
    }

    themeToggle.addEventListener('click', () => {
      if (darkMode) {
        setLightMode();
      } else {
        setDarkMode();
      }
    });

    function setLightMode() {
      body.setAttribute('data-theme', 'light');
      themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
      darkMode = false;
      localStorage.setItem('theme', 'light');
    }

    function setDarkMode() {
      body.removeAttribute('data-theme');
      themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
      darkMode = true;
      localStorage.setItem('theme', 'dark');
    }

    // Hero animation
    gsap.from('.hero h1', {
      y: 50,
      opacity: 0,
      duration: 1,
      ease: 'power3.out',
      delay: 0.4
    });

    gsap.from('.hero p', {
      y: 30,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out',
      delay: 0.6
    });

    gsap.from('.hero .btn', {
      y: 30,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out',
      delay: 0.8
    });

    // Brands animation
    gsap.from('.brand-card', {
      scrollTrigger: {
        trigger: '.brands-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      y: 50,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out',
      stagger: 0.1
    });

    // Card animations
    const cards = document.querySelectorAll('.card');
    cards.forEach((card, index) => {
      gsap.to(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top 80%',
          toggleActions: 'play none none none'
        },
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: 'power3.out',
        delay: index * 0.1
      });
      
      setTimeout(() => {
        card.classList.add('animated');
      }, 500 + (index * 100));
      
      card.addEventListener('mouseenter', () => {
        gsap.to(card, {
          y: -10,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
      
      card.addEventListener('mouseleave', () => {
        gsap.to(card, {
          y: 0,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
    });

    // Testimonial animations
    const testimonials = document.querySelectorAll('.testimonial-card');
    testimonials.forEach((testimonial, index) => {
      gsap.to(testimonial, {
        scrollTrigger: {
          trigger: testimonial,
          start: 'top 80%',
          toggleActions: 'play none none none'
        },
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: 'power3.out',
        delay: index * 0.15
      });
      
      setTimeout(() => {
        testimonial.classList.add('animated');
      }, 500 + (index * 150));
    });

    // Newsletter animation
    gsap.from('.newsletter-section h2', {
      scrollTrigger: {
        trigger: '.newsletter-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      y: 30,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out'
    });

    gsap.from('.newsletter-section p', {
      scrollTrigger: {
        trigger: '.newsletter-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      y: 30,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out',
      delay: 0.2
    });

    gsap.from('.newsletter-form', {
      scrollTrigger: {
        trigger: '.newsletter-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      y: 30,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out',
      delay: 0.4
    });

    // Initialize GSAP ScrollTrigger
    gsap.registerPlugin(ScrollTrigger);
  </script>
</body>
